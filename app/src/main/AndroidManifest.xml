<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.domo">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TestFirebase">

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name="com.example.domo.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.domo.MainActivity"/>
        <activity android:name="registration.LogInActivity"/>
        <activity android:name="registration.PostActivity"/>
        <activity android:name="registration.RegistrationActivity"/>
        <activity android:name="com.example.domo.order.OrderActivity"/>
        <activity android:name="cook.CookMainActivity"/>
        <activity android:name="cook.CookDetailOrderActivity"/>
        <activity android:name="com.example.domo.DetailOrderActivity"/>

        <service
            android:name="com.example.domo.DocumentDishesListenerService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.domo.service" />
            </intent-filter>
        </service>

        <service
            android:name="com.example.domo.DocumentOrdersListenerService"
            android:exported="false" />
    </application>

</manifest>